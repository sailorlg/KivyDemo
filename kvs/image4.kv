<ImageBoxLayout>:
    orientation: "horizontal"
    canvas:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
            source: "./images/shan.jpg"


    AsyncImage:
        source: "https://imgnews.pstatic.net/image/016/2021/08/17/20210817000135_0_20210817095009053.jpg?type=w647"
        size_hint_x: None
        width: '100dp'

    Image:
        source: './images/down.jpg'
        size_hint_y: None
        height: '200dp'
        allow_stretch: True