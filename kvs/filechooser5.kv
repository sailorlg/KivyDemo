<MyFileChooser>:
    BoxLayout:
        size: root.size
        pos: root.size
        orientation: 'vertical'
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<FileChooserBox>:
    Button:
        text: "ChooseFile"
        size_hint: 0.2, 0.1
        on_release: root.show_load()