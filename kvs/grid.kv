<GridLayoutWidget>:
    padding: 20
    spaceing: 20
    cols: 3

    col_force_default: True
    col_default_width: 120
    row_force_default: True
    row_default_height: 40

    cols_minimum: {0:230, 2: 240}
    rows_minimum: {0:230, 1: 240}

    canvas:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        text: "001"
        size_hint_x: None
        width: '100px'


    Button:
        text: "002"


    Button:
        text: "003"
        size_hint_y: None
        height: '100px'


    Button:
        text: "00A"
