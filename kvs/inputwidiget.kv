<ImageBoxLayout>:
    cols: 6
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    TextInput:
        text: "Input 001"
        multiline: False
        pos: 400, 380
        allow_copy: False
        on_text_validate: self.pos=[self.x, self.y-5]
        on_double_tap: root.text_input_ref()

    TextInput:
        text: "Input 002"
        pos: 100, 180
        haligh: 'center'
        background_color: 100, 2, 2, 1
        on_text: self.pos=[self.x+5, self.y]

    TextInput:
        text: "Input 003"
        pos: 400, 180
        haligh: 'center'
        readonly: True
        on_double_tap: self.pos=[self.x-5, self.y]
        on_triple_tap: self.pos=[self.x, self.y+5]
        on_quad_touch: self.pos=[400, 400]


    CheckBox:
        group: "check_00"
        id: first_check_00
        color: 0.6, 0.2, 0.2, 1

    CheckBox:
        group: "check_00"
        id: first_check_01
        color: 0.2, 0.6, 0.2, 1

    CheckBox:
        group: "check_00"
        id: first_check_02
        color: 0.2, 0.2, 0.6, 1

    CheckBox:
        id: second_check_02
        color: 0.6, 0.6, 0.6, 1

    Slider:
        min: 0
        max: 100

    Slider:
        id: slider_move
        orientation: 'vertical'
        min: -100
        max: 100
        step: 10
        value_track: True
        value_track_color: [0.5, 1, 0, 1]
        value: 25
        pos: 100, 200
        on_touch_down:
            print("SLIDER DOWN")
            root.on_slider_event(self.value)

    ProgressBar:
        value: 20
        id: process_bar
        max: 100
        on_touch_down:
            print("PROGRESS DOWN")
            root.clicked()