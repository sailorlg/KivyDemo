<MyButton@Button>:
    size_hint: 0.2, 0.15


<ButtonSampleWidget>:
    Button:
        text: "Button 00"
        size_hint: 0.2, 0.15
        pos: 65, 400
        background_normal: ""
        background_color: [0.1, 0.5, 0.5, 0.1]

    MyButton:
        text: "Button 01"
        pos: 315, 400
        disabled: True

    MyButton:
        text: "Button 02"
        color: [0.8, 0.3, 0.3, 1]
        pos: 565, 400

    MyButton:
        text: "Button 03"
        font_size: 15
        pos: 65, 150

    MyButton:
        text: "Button 04"
        font_size: 25
        pos: 315, 150
        state: "normal"

    MyButton:
        text: "Button 05"
        pos: 565, 150
        state: "down"
        on_release:
            print("KV: on_release")
            root.release_button("")
        on_press:
            print("KV: on_press")
            root.press_button("")

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Can Only Display Glyphs That Is Available In The Font"
            font_size: '20sp'
            color: 0.9, 0.2, 0.1, 1
            italic: True
            text_size: cm(6), mm(20)
            haligh: "right"
            valign: "middle"
            strikethrouth: True

        Label:
            canvas:
                Color:
                    rgba: (0.1, 0.1, 0.1, 0.1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "测试 Test 테스트"
            color: 0.2, 0.2, 0.9, 1
            bold: True
            text_size: cm(4), cm(2)
            halign: 'left'
            valigh: 'top'
            underline: True
            line_height: 2.0
